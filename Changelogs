-- LuaSploit Hub Changelog UI
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/EnesXVC/librarys/main/SearchAndChangeLogLibrary/Source"))()

-- Create and configure the changelog dialog
local dialog = Library:CreateChangelogDialog({
    Title = "LuaSploit Hub - Changelogs",
    ChangelogText = [[
    Version: 1.2.4
    
    Added Features:
    - Added Logos to the Tabs
    - Added Script viewer
    - Made a Discord server
    
    Updated Games:
    - Updated support for Natural Disasters!
    - Added support for Prison Life!
    
    Notes:
    - Report any bug or not working scripts via feedback or in our Discord
    - Some features may be unstable
    - More updates coming soon!
    ]],
    Search = true,
    NotifyLibrary = "Rayfield",
    Notifications = true,
    
    -- Discord Button Configuration
    Altbutton = {
        Name = "Join Discord",
        Clipboard = "https://discord.gg/QwuqqSP9xM"
    },
    
    -- Close Button Notification
    Notification = {
        Title = "Changelog",
        Content = "Changelog has been closed",
        Duration = 3,
        Image = 4483362458
    },
    
    -- Discord Button Notifications
    AltbuttonNotification = {
        Success = {
            Title = "Discord Link Copied!",
            Content = "Join our Discord server for support and updates!",
            Duration = 5,
            Image = 4483362458
        },
        Failure = {
            Title = "Error",
            Content = "Failed to copy Discord link",
            Duration = 5,
            Image = 4483362458
        }
    }
})

return dialog
